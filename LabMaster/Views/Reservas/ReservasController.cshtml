@model IEnumerable<LabMaster.Models.Laboratorio>

@{
    ViewBag.Title = "Seleccionar Laboratorio";
}

<div class="container" style="margin-top: 30px;">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("SeleccionarCarrera", "Reservas")">Carreras</a></li>
            <li class="breadcrumb-item active" aria-current="page">@ViewBag.CarreraNombre</li>
        </ol>
    </nav>

    <div class="text-center">
        <h1>Laboratorios de @ViewBag.CarreraNombre</h1>
        <p class="lead">Seleccione el laboratorio que desea reservar:</p>
    </div>
    <hr />

    <div class="row">
        @if (!Model.Any())
        {
            <div class="col-12 text-center">
                <div class="alert alert-warning">
                    No hay laboratorios registrados para esta carrera actualmente.
                </div>
            </div>
        }

        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm border-success h-100">
                    <div class="card-body text-center">
                        <i class="glyphicon glyphicon-tasks" style="font-size: 40px; color: #28a745;"></i>
                        <h3 class="card-title">@item.NombreLab</h3>
                        <p class="text-muted">Capacidad: <strong>@item.Capacidad personas</strong></p>

                        @* Este botón llevará al calendario (próximo paso) *@
                        <a href="@Url.Action("VerCalendario", "Reservas", new { id = item.LabID })"
                           class="btn btn-success btn-block">
                            <i class="glyphicon glyphicon-calendar"></i> Ver Disponibilidad
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .card {
        transition: all 0.3s cubic-bezier(.25,.8,.25,1);
        border-radius: 15px;
        background: #fff;
    }

        .card:hover {
            box-shadow: 0 14px 28px rgba(0,0,0,0.25), 0 10px 10px rgba(0,0,0,0.22) !important;
            transform: translateY(-5px);
        }
</style>